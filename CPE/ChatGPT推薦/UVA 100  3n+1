1.         輸入 n
2.         印出 n
3.         如果 n = 1 結束
4.         如果 n 是奇數 那麼 n=3*n+1
5.         否則 n=n/2
6.         GOTO 2

參考程式碼     
//https://weilin1205.github.io/posts/uva100/
#include <bits/stdc++.h>
using namespace std;

int main() {
    int i,j;
    while(cin>>i>>j) {
        int m=i, n=j;
        if(i>j) 
            swap(i,j);
        int k=i;
        int max=0;
        
        while(k<=j) {
            int n=k;
            int temp=1;
            while(n!=1) {
                if(n%2==1) {  //n是奇數
                    n=3*n+1;
                    n/=2;
                    temp+=2;
                }
                if(n%2==0) {  //n是偶數
                    n/=2;
                    temp++;
                }
            }
            if(max<temp) 
                max=temp;
            k++;
        }
        cout<<m<<" "<<n<<" "<<max<<endl;//輸出答案
    }
    return 0;
}


