{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: cl.exe 建置專案",
            "type": "shell",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/Fe:",
                "CXX\\${fileBasenameNoExtension}.exe", 
                "CXX\\main.cpp",  
                "CXX\\hash_fn.cpp" 
            ],
            "options": {
                "cwd":"${workspaceFolder}/CXX/main.exe"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "C/C++ 編譯專案檔"
        }
    ]
}