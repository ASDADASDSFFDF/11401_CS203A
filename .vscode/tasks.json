{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: cl.exe 建置專案",
            "type": "shell",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/Fe:",
                "${workspaceFolder}\\${fileBasenameNoExtension}.exe", // 輸出檔名
                "${workspaceFolder}\\main.cpp",  // <-- 包含 main.cpp
                "${workspaceFolder}\\hash_fn.cpp" // <-- 包含 hash_fn.cpp
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "C/C++ 編譯專案檔"
        }
    ]
}